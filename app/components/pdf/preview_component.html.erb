<div id="<%= preview_id %>" class="flex h-screen bg-gray-900" data-controller="pdf-preview" data-pdf-preview-document-id-value="<%= pdf_document.id %>">
  <!-- Sidebar -->
  <div class="w-64 bg-gray-800 border-r border-gray-700 flex flex-col">
    <!-- Header -->
    <div class="p-4 border-b border-gray-700">
      <h2 class="text-white text-lg font-semibold truncate"><%= pdf_document.title %></h2>
      <p class="text-gray-400 text-sm mt-1"><%= total_pages %> pages</p>
    </div>

    <!-- Page Thumbnails -->
    <div class="flex-1 overflow-y-auto p-2">
      <% if has_preview? %>
        <% pages.each_with_index do |page, index| %>
          <div class="mb-2 cursor-pointer group"
               data-action="click->pdf-preview#selectPage"
               data-pdf-preview-page-param="<%= index + 1 %>">
            <div class="border-2 border-transparent group-hover:border-blue-500 rounded-lg overflow-hidden bg-white">
              <div class="aspect-[8.5/11] bg-white p-2">
                <!-- Page content preview -->
                <div class="w-full h-full bg-gray-100 rounded border flex items-center justify-center text-gray-500 text-xs">
                  Page <%= index + 1 %>
                  <% if page[:elements]&.any? %>
                    <span class="ml-1">(<%= page[:elements].length %> elements)</span>
                  <% end %>
                </div>
              </div>
              <div class="px-2 py-1 bg-gray-50 text-center">
                <span class="text-xs text-gray-600">Page <%= index + 1 %></span>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="flex items-center justify-center h-32 text-gray-500">
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p class="text-sm">No preview available</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="p-4 border-t border-gray-700 space-y-2">
      <button class="w-full px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm"
              data-action="click->pdf-preview#downloadPdf">
        Download PDF
      </button>
      <button class="w-full px-3 py-2 bg-gray-700 text-white rounded hover:bg-gray-600 text-sm"
              data-action="click->pdf-preview#printPdf">
        Print
      </button>
    </div>
  </div>

  <!-- Main Preview Area -->
  <div class="flex-1 flex flex-col">
    <!-- Toolbar -->
    <div class="h-12 bg-gray-800 border-b border-gray-700 flex items-center px-4 space-x-4">
      <!-- Navigation -->
      <div class="flex items-center space-x-2">
        <button class="p-1 text-gray-400 hover:text-white disabled:text-gray-600"
                data-action="click->pdf-preview#previousPage"
                data-pdf-preview-target="prevButton">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        
        <div class="flex items-center space-x-2 text-white text-sm">
          <input type="number" 
                 min="1" 
                 max="<%= total_pages %>"
                 value="1"
                 class="w-12 px-2 py-1 bg-gray-700 border border-gray-600 rounded text-center"
                 data-pdf-preview-target="pageInput"
                 data-action="change->pdf-preview#goToPage">
          <span>of <%= total_pages %></span>
        </div>
        
        <button class="p-1 text-gray-400 hover:text-white disabled:text-gray-600"
                data-action="click->pdf-preview#nextPage"
                data-pdf-preview-target="nextButton">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>

      <!-- Zoom Controls -->
      <div class="flex items-center space-x-2 ml-8">
        <button class="p-1 text-gray-400 hover:text-white"
                data-action="click->pdf-preview#zoomOut">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM13 10H7"/>
          </svg>
        </button>
        
        <select class="px-2 py-1 bg-gray-700 border border-gray-600 rounded text-white text-sm"
                data-pdf-preview-target="zoomSelect"
                data-action="change->pdf-preview#changeZoom">
          <% zoom_levels.each do |zoom| %>
            <option value="<%= zoom[:value] %>" <%= 'selected' if zoom[:value] == 1 %>>
              <%= zoom[:label] %>
            </option>
          <% end %>
        </select>
        
        <button class="p-1 text-gray-400 hover:text-white"
                data-action="click->pdf-preview#zoomIn">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
          </svg>
        </button>
      </div>

      <!-- View Options -->
      <div class="flex items-center space-x-2 ml-auto">
        <button class="px-3 py-1 bg-gray-700 text-white rounded hover:bg-gray-600 text-sm"
                data-action="click->pdf-preview#toggleFullscreen">
          Fullscreen
        </button>
        
        <button class="px-3 py-1 bg-gray-700 text-white rounded hover:bg-gray-600 text-sm"
                data-action="click->pdf-preview#refreshPreview">
          Refresh
        </button>
      </div>
    </div>

    <!-- Preview Canvas -->
    <div class="flex-1 overflow-auto bg-gray-900 p-8">
      <div class="max-w-4xl mx-auto">
        <% if has_preview? %>
          <div data-pdf-preview-target="pageContainer" class="space-y-8">
            <% pages.each_with_index do |page, index| %>
              <div class="bg-white shadow-2xl mx-auto page-container <%= 'hidden' unless index == 0 %>"
                   data-page="<%= index + 1 %>"
                   style="width: <%= page_dimensions[:width] %>px; height: <%= page_dimensions[:height] %>px;">
                
                <!-- Page content -->
                <div class="relative w-full h-full">
                  <% if page[:elements]&.any? %>
                    <% page[:elements].each do |element| %>
                      <div class="absolute"
                           style="left: <%= element[:x] || 0 %>px; top: <%= element[:y] || 0 %>px; width: <%= element[:width] || 100 %>px; height: <%= element[:height] || 20 %>px;">
                        <%= render "pdf/preview_elements/#{element[:type]}", element: element %>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="flex items-center justify-center w-full h-full text-gray-400">
                      <div class="text-center">
                        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <p>Empty page</p>
                      </div>
                    </div>
                  <% end %>
                </div>

                <!-- Page number -->
                <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 text-gray-400 text-sm">
                  Page <%= index + 1 %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="flex items-center justify-center h-full text-gray-500">
            <div class="text-center">
              <svg class="w-24 h-24 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <h3 class="text-xl font-semibold mb-2">No Preview Available</h3>
              <p class="text-gray-400">Generate a preview to see your PDF document</p>
              <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
                      data-action="click->pdf-preview#generatePreview">
                Generate Preview
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Loading overlay -->
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
       data-pdf-preview-target="loadingOverlay">
    <div class="bg-white rounded-lg p-6 flex items-center space-x-4">
      <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
      <span class="text-gray-700">Loading preview...</span>
    </div>
  </div>
</div>