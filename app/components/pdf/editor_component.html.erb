<div id="<%= editor_id %>" class="flex h-screen bg-gray-50 dark:bg-gray-900" data-controller="pdf-editor" data-pdf-editor-document-id-value="<%= pdf_document.id %>">
  <!-- Toolbar -->
  <div id="<%= toolbar_id %>" class="w-16 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 flex flex-col items-center py-4 space-y-4">
    <button class="p-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-lg transition-colors" 
            data-action="click->pdf-editor#selectTool" 
            data-pdf-editor-tool-param="select"
            title="Select">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.122 2.122"/>
      </svg>
    </button>

    <div class="w-full h-px bg-gray-200 dark:bg-gray-700"></div>

    <% element_types.each do |element| %>
      <button class="p-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-lg transition-colors"
              data-action="click->pdf-editor#selectTool"
              data-pdf-editor-tool-param="<%= element[:type] %>"
              title="<%= element[:label] %>">
        <% case element[:icon] %>
        <% when 'Type' %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5v14h14V5H5zm2 2h10v2H7V7zm0 4h10v2H7v-2zm0 4h7v2H7v-2z"/>
          </svg>
        <% when 'Image' %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        <% when 'Square' %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h12a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6z"/>
          </svg>
        <% when 'Minus' %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
          </svg>
        <% when 'Table' %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0V4a1 1 0 011-1h16a1 1 0 011 1v16a1 1 0 01-1 1H4a1 1 0 01-1-1z"/>
          </svg>
        <% when 'PenTool' %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
          </svg>
        <% end %>
      </button>
    <% end %>

    <div class="w-full h-px bg-gray-200 dark:bg-gray-700"></div>

    <button class="p-2 text-gray-600 dark:text-gray-400 hover:text-green-600 dark:hover:text-green-400 hover:bg-green-50 dark:hover:bg-green-900/20 rounded-lg transition-colors"
            data-action="click->pdf-editor#saveDocument"
            title="Save">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/>
      </svg>
    </button>

    <button class="p-2 text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 hover:bg-purple-50 dark:hover:bg-purple-900/20 rounded-lg transition-colors"
            data-action="click->pdf-editor#previewDocument"
            title="Preview">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
    </button>
  </div>

  <!-- Main Editor Area -->
  <div class="flex-1 flex flex-col">
    <!-- Top Controls -->
    <div class="h-12 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 flex items-center px-4 space-x-4">
      <div class="flex items-center space-x-2">
        <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Page:</label>
        <select class="px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                data-action="change->pdf-editor#changePage"
                data-pdf-editor-target="pageSelect">
          <option value="1">1</option>
        </select>
      </div>
      
      <div class="flex items-center space-x-2">
        <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Zoom:</label>
        <select class="px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                data-action="change->pdf-editor#changeZoom"
                data-pdf-editor-target="zoomSelect">
          <option value="0.5">50%</option>
          <option value="0.75">75%</option>
          <option value="1" selected>100%</option>
          <option value="1.25">125%</option>
          <option value="1.5">150%</option>
          <option value="2">200%</option>
        </select>
      </div>

      <div class="flex items-center space-x-1 ml-auto">
        <button class="px-3 py-1 text-sm bg-blue-600 dark:bg-blue-500 text-white rounded hover:bg-blue-700 dark:hover:bg-blue-600"
                data-action="click->pdf-editor#undo">
          Undo
        </button>
        <button class="px-3 py-1 text-sm bg-blue-600 dark:bg-blue-500 text-white rounded hover:bg-blue-700 dark:hover:bg-blue-600"
                data-action="click->pdf-editor#redo">
          Redo
        </button>
      </div>
    </div>

    <!-- Canvas Area -->
    <div class="flex-1 relative overflow-auto bg-gray-100 dark:bg-gray-700 p-8">
      <div id="<%= canvas_id %>" 
           class="bg-white shadow-lg mx-auto relative border"
           style="width: 612px; height: 792px; transform-origin: top left;"
           data-pdf-editor-target="canvas"
           data-action="click->pdf-editor#canvasClick contextmenu->pdf-editor#canvasContextMenu">
        
        <!-- Render existing elements -->
        <% elements.each do |element| %>
          <%= render "pdf/elements/#{element.element_type}", element: element %>
        <% end %>

        <!-- Selection overlay -->
        <div class="absolute inset-0 pointer-events-none" data-pdf-editor-target="selectionLayer"></div>
      </div>
    </div>
  </div>

  <!-- Properties Panel -->
  <div id="<%= properties_panel_id %>" 
       class="w-80 bg-white dark:bg-gray-800 border-l border-gray-200 dark:border-gray-700 p-4 overflow-y-auto"
       data-pdf-editor-target="propertiesPanel">
    
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Properties</h3>
    
    <div data-pdf-editor-target="elementProperties" class="hidden">
      <!-- Dynamic content will be inserted here based on selected element -->
    </div>

    <div data-pdf-editor-target="documentProperties">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Document Title</label>
          <input type="text" 
                 value="<%= pdf_document.title %>"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                 data-action="input->pdf-editor#updateDocumentProperty"
                 data-property="title">
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Description</label>
          <textarea class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm h-20 resize-none bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                    data-action="input->pdf-editor#updateDocumentProperty"
                    data-property="description"><%= pdf_document.description %></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
          <select class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  data-action="change->pdf-editor#updateDocumentProperty"
                  data-property="status">
            <% PdfDocument::STATUSES.each do |status| %>
              <option value="<%= status %>" <%= 'selected' if pdf_document.status == status %>>
                <%= status.humanize %>
              </option>
            <% end %>
          </select>
        </div>

        <div class="pt-2 border-t border-gray-200 dark:border-gray-700">
          <div class="text-sm text-gray-500 dark:text-gray-400">
            <div>Created: <%= pdf_document.created_at.strftime('%b %d, %Y %I:%M %p') %></div>
            <div>Modified: <%= pdf_document.updated_at.strftime('%b %d, %Y %I:%M %p') %></div>
            <div>Elements: <span data-pdf-editor-target="elementCount"><%= elements.count %></span></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>