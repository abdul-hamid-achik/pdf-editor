<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-8 py-6">
      <h1 class="text-2xl font-bold text-white">User Profile</h1>
    </div>
    
    <!-- Profile Information -->
    <div class="px-8 py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
            <p class="text-lg text-gray-900 bg-gray-50 px-4 py-2 rounded-lg">
              <%= @user.first_name.present? ? @user.first_name : "Not provided" %>
            </p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
            <p class="text-lg text-gray-900 bg-gray-50 px-4 py-2 rounded-lg">
              <%= @user.last_name.present? ? @user.last_name : "Not provided" %>
            </p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <p class="text-lg text-gray-900 bg-gray-50 px-4 py-2 rounded-lg">
              <%= @user.email %>
            </p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Member Since</label>
            <p class="text-lg text-gray-900 bg-gray-50 px-4 py-2 rounded-lg">
              <%= @user.created_at.strftime("%B %d, %Y") %>
            </p>
          </div>
        </div>
        
        <!-- Statistics -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900 border-b pb-2">Your PDF Activity</h3>
          
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-blue-50 p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-blue-600"><%= @user.pdf_documents.count %></div>
              <div class="text-sm text-blue-800">Documents</div>
            </div>
            
            <div class="bg-green-50 p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-green-600"><%= @user.pdf_templates.count %></div>
              <div class="text-sm text-green-800">Templates</div>
            </div>
            
            <div class="bg-purple-50 p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-purple-600"><%= @user.pdf_snippets.count %></div>
              <div class="text-sm text-purple-800">Snippets</div>
            </div>
            
            <div class="bg-orange-50 p-4 rounded-lg text-center">
              <div class="text-2xl font-bold text-orange-600"><%= @user.pdf_versions.count %></div>
              <div class="text-sm text-orange-800">Versions</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="mt-8 flex flex-wrap gap-4">
        <%= link_to root_path, class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200 flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Create New Document
        <% end %>
        
        <%= link_to pdf_templates_path, class: "px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition duration-200 flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          Browse Templates
        <% end %>
        
        <%= link_to pdf_documents_path, class: "px-6 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition duration-200 flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          My Documents
        <% end %>
      </div>
    </div>
  </div>
</div>