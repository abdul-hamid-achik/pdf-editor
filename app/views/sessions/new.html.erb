<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-bold text-gray-900">
        Sign in to PDF Editor
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Or 
        <%= link_to "create a new account", register_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
    
    <%= form_with url: login_path, method: :post, local: true, class: "mt-8 space-y-6" do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, 
                required: true,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Enter your email" %>
        </div>
        
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, 
                required: true,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Enter your password" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", 
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>