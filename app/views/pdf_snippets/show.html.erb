<% content_for :title, @pdf_snippet.name %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <nav class="flex text-sm text-gray-500 dark:text-gray-400 mb-2" aria-label="Breadcrumb">
        <%= link_to "Snippets", pdf_snippets_path, class: "hover:text-gray-700 dark:hover:text-gray-300" %> 
        <span class="mx-2">/</span>
        <span class="text-gray-900 dark:text-white"><%= @pdf_snippet.name %></span>
      </nav>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @pdf_snippet.name %></h1>
      <div class="flex items-center mt-2 space-x-3">
        <% if @pdf_snippet.snippet_type.present? %>
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/20 text-blue-800 dark:text-blue-400 text-sm font-medium rounded-full capitalize">
            <%= @pdf_snippet.snippet_type %>
          </span>
        <% end %>
        <% if @pdf_snippet.global? %>
          <span class="px-3 py-1 bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-400 text-sm font-medium rounded-full">
            Global
          </span>
        <% end %>
      </div>
    </div>
    
    <div class="flex space-x-3">
      <% if @pdf_snippet.user_id == current_user&.id %>
        <%= link_to "Edit", edit_pdf_snippet_path(@pdf_snippet),
            class: "px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" %>
      <% end %>
    </div>
  </div>

  <!-- Snippet Info Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 dark:bg-blue-900/20 rounded-lg">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Type</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white">
            <%= @pdf_snippet.snippet_type&.humanize || "Untyped" %>
          </p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 dark:bg-green-900/20 rounded-lg">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h6a2 2 0 012 2v4.586a1 1 0 01-.293.707L15.414 10.5a1 1 0 01-.707.293H11a2 2 0 00-2 2v4a2 2 0 002 2h6a2 2 0 002-2v-4a2 2 0 00-2-2h-1V9a1 1 0 01.293-.707L18.586 6H19a2 2 0 012 2v4a2 2 0 01-2 2h-6a2 2 0 01-2-2V8h1.414a1 1 0 01.707.293L14.414 10H13v4.414a1 1 0 01-.293.707L10.414 17H9v-4a2 2 0 00-2-2H3a2 2 0 01-2-2V5a2 2 0 012-2h4a1 1 0 01.707.293L9.414 5H11V3a1 1 0 01.293-.707L13.586 0H15a1 1 0 01.707.293L17.414 2H19"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Availability</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white">
            <% if @pdf_snippet.global? %>
              <span class="text-green-600 dark:text-green-400">Global</span>
            <% else %>
              <span class="text-blue-600 dark:text-blue-400">Personal</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-purple-100 dark:bg-purple-900/20 rounded-lg">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Creator</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white">
            <% if @pdf_snippet.user.present? %>
              <%= @pdf_snippet.user.name || @pdf_snippet.user.email %>
            <% else %>
              System
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Content and Properties -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Content -->
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Content</h3>
      <% if @pdf_snippet.content.present? %>
        <div class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg">
          <pre class="text-sm text-gray-800 dark:text-gray-200 whitespace-pre-wrap overflow-auto max-h-64"><%= @pdf_snippet.content %></pre>
        </div>
      <% else %>
        <p class="text-gray-500 dark:text-gray-400 italic">No content defined</p>
      <% end %>
    </div>

    <!-- Properties -->
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Properties</h3>
      <% if @pdf_snippet.properties.present? %>
        <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg text-sm overflow-auto max-h-64"><code class="text-gray-800 dark:text-gray-200"><%= JSON.pretty_generate(@pdf_snippet.properties) %></code></pre>
      <% else %>
        <p class="text-gray-500 dark:text-gray-400 italic">No properties defined</p>
      <% end %>
    </div>
  </div>

  <!-- Usage Instructions -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Usage Instructions</h3>
    <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
      <h4 class="font-medium text-blue-800 dark:text-blue-400 mb-2">How to use this snippet:</h4>
      <ul class="text-sm text-blue-700 dark:text-blue-300 space-y-2">
        <li>1. Go to the PDF editor for any document</li>
        <li>2. Look for the snippets panel or library</li>
        <li>3. Find this snippet: "<strong><%= @pdf_snippet.name %></strong>"</li>
        <li>4. Drag and drop it into your document or click to insert</li>
        <li>5. Customize the content and properties as needed</li>
      </ul>
    </div>
  </div>

  <!-- Details -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Details</h3>
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Created</dt>
        <dd class="text-sm text-gray-900 dark:text-white"><%= @pdf_snippet.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>
      
      <div>
        <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Last Updated</dt>
        <dd class="text-sm text-gray-900 dark:text-white"><%= @pdf_snippet.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>
      
      <div>
        <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Content Length</dt>
        <dd class="text-sm text-gray-900 dark:text-white">
          <%= @pdf_snippet.content&.length || 0 %> characters
        </dd>
      </div>
      
      <div>
        <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Properties Count</dt>
        <dd class="text-sm text-gray-900 dark:text-white">
          <%= @pdf_snippet.properties&.keys&.count || 0 %> properties
        </dd>
      </div>
    </dl>
  </div>
</div>
