<% content_for :title, "Edit #{@pdf_snippet.name}" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <nav class="flex text-sm text-gray-500 dark:text-gray-400 mb-2" aria-label="Breadcrumb">
      <%= link_to "Snippets", pdf_snippets_path, class: "hover:text-gray-700 dark:hover:text-gray-300" %> 
      <span class="mx-2">/</span>
      <%= link_to @pdf_snippet.name, @pdf_snippet, class: "hover:text-gray-700 dark:hover:text-gray-300" %>
      <span class="mx-2">/</span>
      <span class="text-gray-900 dark:text-white">Edit</span>
    </nav>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Snippet</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-300">
      Update your snippet content, properties, and settings
    </p>
  </div>

  <!-- Form Card -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <%= render 'form', pdf_snippet: @pdf_snippet %>
  </div>
</div>
