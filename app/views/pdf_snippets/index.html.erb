<% content_for :title, "PDF Snippets" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">PDF Snippets</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">Manage reusable PDF components and elements</p>
    </div>
    
    <%= link_to new_pdf_snippet_path, class: "bg-blue-600 dark:bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors inline-flex items-center space-x-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span>Create New Snippet</span>
    <% end %>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 dark:bg-blue-900/20 rounded-lg">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Snippets</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_snippets.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 dark:bg-green-900/20 rounded-lg">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Global Snippets</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_snippets.where(global: true).count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-purple-100 dark:bg-purple-900/20 rounded-lg">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">My Snippets</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_snippets.where(user_id: current_user&.id).count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-100 dark:bg-yellow-900/20 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Types</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_snippets.distinct.count(:snippet_type) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter Options -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="flex flex-wrap gap-4 items-center">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Filter by Type:</h3>
      <%= link_to pdf_snippets_path, class: "px-4 py-2 rounded-lg #{'bg-blue-600 text-white' if params[:snippet_type].blank?} #{'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' if params[:snippet_type].present?} transition-colors" do %>
        All
      <% end %>
      <% @snippet_types.each do |snippet_type| %>
        <%= link_to pdf_snippets_path(snippet_type: snippet_type), class: "px-4 py-2 rounded-lg #{'bg-blue-600 text-white' if params[:snippet_type] == snippet_type} #{'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' if params[:snippet_type] != snippet_type} transition-colors capitalize" do %>
          <%= snippet_type.humanize %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Snippets Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @pdf_snippets.each do |snippet| %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow">
        <!-- Snippet Header -->
        <div class="p-4 border-b border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white truncate">
              <%= link_to snippet.name, snippet, class: "hover:text-blue-600 dark:hover:text-blue-400" %>
            </h3>
            <% if snippet.global? %>
              <span class="px-2 py-1 bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-400 text-xs font-medium rounded-full">Global</span>
            <% end %>
          </div>
          
          <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
            <% if snippet.snippet_type.present? %>
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full capitalize">
                <%= snippet.snippet_type %>
              </span>
            <% end %>
            <span>â€¢</span>
            <span><%= snippet.created_at.strftime("%b %d, %Y") %></span>
          </div>
        </div>
        
        <!-- Snippet Preview -->
        <div class="p-4">
          <% if snippet.content.present? %>
            <div class="bg-gray-50 dark:bg-gray-900 rounded p-3 mb-4">
              <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3">
                <%= truncate(snippet.content, length: 150) %>
              </p>
            </div>
          <% else %>
            <div class="h-20 bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900/20 dark:to-blue-800/20 rounded flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
          <% end %>
          
          <!-- Action Buttons -->
          <div class="flex space-x-2">
            <%= link_to "View", snippet, class: "flex-1 bg-blue-600 dark:bg-blue-500 text-white text-center py-2 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" %>
            <% if snippet.user_id == current_user&.id %>
              <%= link_to edit_pdf_snippet_path(snippet), class: "px-3 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @pdf_snippets.empty? %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No snippets found</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-4">Get started by creating your first PDF snippet.</p>
      <%= link_to new_pdf_snippet_path, class: "bg-blue-600 dark:bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors inline-flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Create Snippet</span>
      <% end %>
    </div>
  <% end %>
</div>
