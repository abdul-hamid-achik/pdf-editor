<% content_for :title, "New PDF Template" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <nav class="flex text-sm text-gray-500 dark:text-gray-400 mb-2" aria-label="Breadcrumb">
      <%= link_to "Templates", pdf_templates_path, class: "hover:text-gray-700 dark:hover:text-gray-300" %> 
      <span class="mx-2">/</span>
      <span class="text-gray-900 dark:text-white">New Template</span>
    </nav>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Create New Template</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-300">
      Create a reusable template that can be used to generate multiple PDF documents
    </p>
  </div>

  <!-- Form Card -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <%= render 'form', pdf_template: @pdf_template %>
  </div>
</div>
