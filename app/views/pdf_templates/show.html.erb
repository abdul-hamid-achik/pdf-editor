<% content_for :title, @pdf_template.name %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <nav class="flex text-sm text-gray-500 dark:text-gray-400 mb-2" aria-label="Breadcrumb">
        <%= link_to "Templates", pdf_templates_path, class: "hover:text-gray-700 dark:hover:text-gray-300" %> 
        <span class="mx-2">/</span>
        <span class="text-gray-900 dark:text-white"><%= @pdf_template.name %></span>
      </nav>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @pdf_template.name %></h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300"><%= @pdf_template.description %></p>
    </div>
    
    <div class="flex space-x-3">
      <%= link_to "Use Template", use_pdf_template_path(@pdf_template), method: :post,
          class: "bg-blue-600 dark:bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors inline-flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Create Document</span>
      <% end %>
      
      <% if @pdf_template.user_id == current_user&.id %>
        <%= link_to "Edit", edit_pdf_template_path(@pdf_template),
            class: "px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" %>
      <% end %>
    </div>
  </div>

  <!-- Template Info Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 dark:bg-blue-900/20 rounded-lg">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Category</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @pdf_template.category&.capitalize || "Uncategorized" %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 dark:bg-green-900/20 rounded-lg">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Usage Count</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @pdf_template.usage_count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="p-2 bg-purple-100 dark:bg-purple-900/20 rounded-lg">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Type</p>
          <p class="text-lg font-semibold text-gray-900 dark:text-white">
            <% if @pdf_template.user_id.nil? %>
              <span class="text-green-600 dark:text-green-400">Global</span>
            <% else %>
              <span class="text-blue-600 dark:text-blue-400">Personal</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Template Preview -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Template Thumbnail/Preview -->
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Preview</h3>
      <div class="h-64 bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900/20 dark:to-blue-800/20 rounded-lg flex items-center justify-center">
        <% if @pdf_template.thumbnail_url.present? %>
          <%= image_tag @pdf_template.thumbnail_url, class: "w-full h-full object-contain rounded-lg" %>
        <% else %>
          <div class="text-center">
            <svg class="w-16 h-16 text-blue-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p class="text-gray-500 dark:text-gray-400">No preview available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Template Details -->
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Details</h3>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Created</dt>
          <dd class="text-sm text-gray-900 dark:text-white"><%= @pdf_template.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Last Updated</dt>
          <dd class="text-sm text-gray-900 dark:text-white"><%= @pdf_template.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        
        <% if @pdf_template.user.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Created By</dt>
            <dd class="text-sm text-gray-900 dark:text-white">
              <%= @pdf_template.user.name || @pdf_template.user.email %>
            </dd>
          </div>
        <% end %>
        
        <div>
          <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">Documents Created</dt>
          <dd class="text-sm text-gray-900 dark:text-white">
            <%= @pdf_template.pdf_documents.count %> documents
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Template Structure -->
  <% if @pdf_template.structure.present? || @pdf_template.default_data.present? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <% if @pdf_template.structure.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Template Structure</h3>
          <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg text-sm overflow-auto max-h-64"><code class="text-gray-800 dark:text-gray-200"><%= JSON.pretty_generate(@pdf_template.structure) %></code></pre>
        </div>
      <% end %>
      
      <% if @pdf_template.default_data.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Default Data</h3>
          <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg text-sm overflow-auto max-h-64"><code class="text-gray-800 dark:text-gray-200"><%= JSON.pretty_generate(@pdf_template.default_data) %></code></pre>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Recent Documents -->
  <% if @pdf_template.pdf_documents.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Documents</h3>
        <%= link_to "View all", pdf_documents_path(template_id: @pdf_template.id), class: "text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm" %>
      </div>
      
      <div class="space-y-3">
        <% @pdf_template.pdf_documents.limit(5).each do |document| %>
          <div class="flex items-center justify-between p-3 border border-gray-200 dark:border-gray-600 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-900 dark:text-white">
                <%= link_to document.title, document, class: "hover:text-blue-600 dark:hover:text-blue-400" %>
              </h4>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Created <%= document.created_at.strftime("%B %d, %Y") %>
              </p>
            </div>
            <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full capitalize">
              <%= document.status %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
