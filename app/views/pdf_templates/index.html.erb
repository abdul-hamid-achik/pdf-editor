<% content_for :title, "PDF Templates" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">PDF Templates</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">Manage and create reusable PDF templates</p>
    </div>
    
    <%= link_to new_pdf_template_path, class: "bg-blue-600 dark:bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors inline-flex items-center space-x-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <span>Create New Template</span>
    <% end %>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 dark:bg-blue-900/20 rounded-lg">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Total Templates</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_templates.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 dark:bg-green-900/20 rounded-lg">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Global Templates</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_templates.where(user_id: nil).count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-purple-100 dark:bg-purple-900/20 rounded-lg">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">My Templates</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_templates.where(user_id: current_user&.id).count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700 transition-colors">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-100 dark:bg-yellow-900/20 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Most Used</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @pdf_templates.maximum(:usage_count) || 0 %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter Options -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="flex flex-wrap gap-4 items-center">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Filter by Category:</h3>
      <%= link_to pdf_templates_path, class: "px-4 py-2 rounded-lg #{'bg-blue-600 text-white' if params[:category].blank?} #{'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' if params[:category].present?} transition-colors" do %>
        All
      <% end %>
      <% %w[business legal invoice report form letter].each do |category| %>
        <%= link_to pdf_templates_path(category: category), class: "px-4 py-2 rounded-lg #{'bg-blue-600 text-white' if params[:category] == category} #{'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' if params[:category] != category} transition-colors capitalize" do %>
          <%= category %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Templates Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @pdf_templates.each do |template| %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow">
        <!-- Template Thumbnail -->
        <div class="h-40 bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900/20 dark:to-blue-800/20 flex items-center justify-center">
          <% if template.thumbnail_url.present? %>
            <%= image_tag template.thumbnail_url, class: "w-full h-full object-cover" %>
          <% else %>
            <svg class="w-16 h-16 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          <% end %>
        </div>
        
        <!-- Template Info -->
        <div class="p-6">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white truncate">
              <%= link_to template.name, template, class: "hover:text-blue-600 dark:hover:text-blue-400" %>
            </h3>
            <% if template.user_id.nil? %>
              <span class="px-2 py-1 bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-400 text-xs font-medium rounded-full">Global</span>
            <% end %>
          </div>
          
          <p class="text-gray-600 dark:text-gray-400 text-sm mb-3 line-clamp-2">
            <%= template.description.presence || "No description available" %>
          </p>
          
          <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 mb-4">
            <span><%= template.category&.capitalize || "Uncategorized" %></span>
            <span>Used <%= template.usage_count %> times</span>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex space-x-2">
            <%= link_to "Use Template", use_pdf_template_path(template), method: :post,
                class: "flex-1 bg-blue-600 dark:bg-blue-500 text-white text-center py-2 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors" %>
            <%= link_to "View", template, class: "px-3 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" %>
            <% if template.user_id == current_user&.id %>
              <%= link_to edit_pdf_template_path(template), class: "px-3 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @pdf_templates.empty? %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No templates found</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-4">Get started by creating your first PDF template.</p>
      <%= link_to new_pdf_template_path, class: "bg-blue-600 dark:bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors inline-flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Create Template</span>
      <% end %>
    </div>
  <% end %>
</div>
