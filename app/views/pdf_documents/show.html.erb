<% content_for :title, @pdf_document.title %>

<div class="space-y-6">
  <!-- Document Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-3 mb-3">
          <h1 class="text-3xl font-bold text-gray-900"><%= @pdf_document.title %></h1>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
            case @pdf_document.status
            when 'completed' then 'bg-green-100 text-green-800'
            when 'processing' then 'bg-blue-100 text-blue-800'
            when 'failed' then 'bg-red-100 text-red-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
            <%= @pdf_document.status.humanize %>
          </span>
        </div>
        
        <% if @pdf_document.description.present? %>
          <p class="text-gray-600 text-lg mb-4"><%= @pdf_document.description %></p>
        <% end %>
        
        <div class="flex items-center space-x-6 text-sm text-gray-500">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Created <%= @pdf_document.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span>Last modified <%= @pdf_document.updated_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
            </svg>
            <span><%= @pdf_document.pdf_elements.count %> elements</span>
          </div>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex items-center space-x-3">
        <%= link_to edit_pdf_document_path(@pdf_document), class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors inline-flex items-center space-x-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          <span>Edit</span>
        <% end %>
        
        <%= link_to "#{pdf_document_path(@pdf_document)}/preview", target: "_blank", class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors inline-flex items-center space-x-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          <span>Preview</span>
        <% end %>
        
        <% if @pdf_document.generated_file.attached? %>
          <%= link_to "#{pdf_document_path(@pdf_document)}/download", class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors inline-flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span>Download</span>
          <% end %>
        <% end %>
        
        <!-- More Actions Menu -->
        <div class="relative" data-controller="dropdown">
          <button class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100"
                  data-action="click->dropdown#toggle">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
            </svg>
          </button>
          
          <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 hidden z-10"
               data-dropdown-target="menu">
            <div class="py-1">
              <%= link_to "Duplicate", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
              <%= link_to "Export", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
              <%= link_to "Share", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
              <hr class="my-1">
              <%= link_to "Delete", pdf_document_path(@pdf_document), method: :delete, 
                          data: { confirm: "Are you sure?" }, 
                          class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-50" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Document Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content Area -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Document Preview/Thumbnail -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Document Preview</h2>
        
        <div class="aspect-[8.5/11] bg-gray-100 rounded-lg border-2 border-gray-200 flex items-center justify-center">
          <% if @pdf_document.generated_file.attached? %>
            <!-- This would show a PDF preview/thumbnail -->
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="text-gray-600">PDF Generated</p>
              <p class="text-sm text-gray-500">Click preview to view</p>
            </div>
          <% else %>
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p class="text-gray-600">No Preview Available</p>
              <p class="text-sm text-gray-500">Edit document to generate preview</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Document Elements -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Document Elements</h2>
          <span class="text-sm text-gray-500"><%= @pdf_document.pdf_elements.count %> elements</span>
        </div>
        
        <% if @pdf_document.pdf_elements.any? %>
          <div class="space-y-3">
            <% @pdf_document.pdf_elements.order(:created_at).each do |element| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                    <% case element.element_type %>
                    <% when 'text' %>
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
                      </svg>
                    <% when 'image' %>
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    <% else %>
                      <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h12a2 2 0 012 2v12a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"/>
                      </svg>
                    <% end %>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900"><%= element.element_type.humanize %></p>
                    <p class="text-sm text-gray-500">
                      Position: <%= element.position['x'] || 0 %>, <%= element.position['y'] || 0 %>
                    </p>
                  </div>
                </div>
                <div class="text-sm text-gray-500">
                  <%= element.created_at.strftime('%m/%d') %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <p class="text-gray-600 mb-2">No elements yet</p>
            <p class="text-sm text-gray-500">Start editing to add text, images, and other elements</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Document Info -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Document Information</h3>
        
        <div class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Template</dt>
            <dd class="text-sm text-gray-900">
              <% if @pdf_document.pdf_template %>
                <%= link_to @pdf_document.pdf_template.name, "#", class: "text-blue-600 hover:text-blue-700" %>
              <% else %>
                <span class="text-gray-400">No template used</span>
              <% end %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">File Size</dt>
            <dd class="text-sm text-gray-900">
              <% if @pdf_document.generated_file.attached? %>
                <%= number_to_human_size(@pdf_document.generated_file.byte_size) %>
              <% else %>
                <span class="text-gray-400">Not generated yet</span>
              <% end %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Versions</dt>
            <dd class="text-sm text-gray-900">
              <%= @pdf_document.pdf_versions.count %> versions
            </dd>
          </div>
        </div>
      </div>

      <!-- Version History -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Version History</h3>
        
        <% if @pdf_document.pdf_versions.any? %>
          <div class="space-y-3">
            <% @pdf_document.pdf_versions.order(created_at: :desc).limit(5).each do |version| %>
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900">Version <%= version.version_number %></p>
                  <p class="text-xs text-gray-500"><%= version.created_at.strftime('%m/%d/%Y %I:%M %p') %></p>
                </div>
                <button class="text-xs text-blue-600 hover:text-blue-700">Restore</button>
              </div>
            <% end %>
          </div>
          
          <% if @pdf_document.pdf_versions.count > 5 %>
            <div class="mt-3 pt-3 border-t border-gray-200">
              <button class="text-sm text-blue-600 hover:text-blue-700">View all versions</button>
            </div>
          <% end %>
        <% else %>
          <p class="text-sm text-gray-500">No versions saved yet</p>
        <% end %>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
        
        <div class="space-y-2">
          <%= link_to "Generate PDF", "#", class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded" %>
          <%= link_to "Create Template", "#", class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded" %>
          <%= link_to "Export as...", "#", class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded" %>
          <%= link_to "Share Document", "#", class: "block w-full text-left px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Simple Dropdown Controller -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Simple dropdown functionality
  document.querySelectorAll('[data-controller="dropdown"]').forEach(dropdown => {
    const button = dropdown.querySelector('[data-action*="dropdown#toggle"]');
    const menu = dropdown.querySelector('[data-dropdown-target="menu"]');
    
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      menu.classList.toggle('hidden');
    });
    
    // Close when clicking outside
    document.addEventListener('click', function() {
      menu.classList.add('hidden');
    });
  });
});
</script>