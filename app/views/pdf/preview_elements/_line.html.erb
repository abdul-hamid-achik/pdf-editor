<div class="line-element w-full h-full flex items-center justify-center relative overflow-hidden">
  <% color = element[:color] || '#000000' %>
  <% width = element[:line_width] || 1 %>
  <% style_type = element[:line_style] || 'solid' %>
  
  <div class="absolute"
       style="width: 100%; height: <%= width %>px; background-color: <%= color %>; 
              top: 50%; transform: translateY(-50%);
              <% if style_type == 'dashed' %>border-top: <%= width %>px dashed <%= color %>; background: none;<% end %>
              <% if style_type == 'dotted' %>border-top: <%= width %>px dotted <%= color %>; background: none;<% end %>">
  </div>
</div>