<div class="pdf-element pdf-element-image border border-dashed border-green-300 bg-green-50 hover:border-green-500 cursor-move absolute"
     data-element-id="<%= element.id %>"
     data-element-type="image"
     style="left: <%= element.x_position || 0 %>px; top: <%= element.y_position || 0 %>px; width: <%= element.width || 150 %>px; height: <%= element.height || 100 %>px;"
     data-action="click->pdf-editor#selectElement mousedown->pdf-editor#startDrag">
  
  <div class="w-full h-full flex items-center justify-center overflow-hidden rounded">
    <% if element.content['image_url'].present? %>
      <img src="<%= element.content['image_url'] %>" 
           alt="<%= element.content['alt_text'] || 'Image' %>"
           class="max-w-full max-h-full object-contain">
    <% else %>
      <div class="text-green-600 text-center p-2">
        <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <span class="text-xs">Click to add image</span>
      </div>
    <% end %>
  </div>

  <!-- Resize handles -->
  <div class="element-handles hidden">
    <div class="resize-handle nw-resize absolute -top-1 -left-1 w-2 h-2 bg-green-600 border border-white cursor-nw-resize"></div>
    <div class="resize-handle ne-resize absolute -top-1 -right-1 w-2 h-2 bg-green-600 border border-white cursor-ne-resize"></div>
    <div class="resize-handle sw-resize absolute -bottom-1 -left-1 w-2 h-2 bg-green-600 border border-white cursor-sw-resize"></div>
    <div class="resize-handle se-resize absolute -bottom-1 -right-1 w-2 h-2 bg-green-600 border border-white cursor-se-resize"></div>
  </div>
</div>