<div class="space-y-4">
  <h4 class="text-sm font-semibold text-gray-900">Shape Properties</h4>
  
  <%= form_with model: [@pdf_document, element], local: false, html: { class: "space-y-3" } do |form| %>
    <!-- Shape Type -->
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">Shape Type</label>
      <%= form.select :shape_type,
          options_for_select([
            ['Rectangle', 'rectangle'],
            ['Circle', 'circle'],
            ['Triangle', 'triangle'],
            ['Star', 'star']
          ], element.content['shape_type'] || 'rectangle'),
          {},
          { 
            class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
            data: { 
              action: "change->pdf-editor#updateElementProperty",
              property: "content.shape_type"
            }
          } %>
    </div>

    <!-- Colors -->
    <div class="grid grid-cols-2 gap-2">
      <div>
        <label class="block text-xs font-medium text-gray-700 mb-1">Fill Color</label>
        <%= form.color_field :fill_color,
            value: element.styles['fill_color'] || '#3B82F6',
            class: "w-full h-8 border border-gray-300 rounded-md cursor-pointer",
            data: { 
              action: "input->pdf-editor#updateElementProperty",
              property: "styles.fill_color"
            } %>
      </div>
      
      <div>
        <label class="block text-xs font-medium text-gray-700 mb-1">Border Color</label>
        <%= form.color_field :border_color,
            value: element.styles['border_color'] || '#1E40AF',
            class: "w-full h-8 border border-gray-300 rounded-md cursor-pointer",
            data: { 
              action: "input->pdf-editor#updateElementProperty",
              property: "styles.border_color"
            } %>
      </div>
    </div>

    <!-- Border Width -->
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">Border Width</label>
      <%= form.number_field :border_width,
          value: element.styles['border_width'] || 1,
          min: 0, max: 20,
          class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
          data: { 
            action: "input->pdf-editor#updateElementProperty",
            property: "styles.border_width"
          } %>
    </div>

    <!-- Position and Size -->
    <div class="pt-2 border-t border-gray-200">
      <h5 class="text-xs font-medium text-gray-700 mb-2">Position & Size</h5>
      <div class="grid grid-cols-2 gap-2">
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">X Position</label>
          <%= form.number_field :x_position,
              value: element.x_position || 0,
              step: 0.1,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "x_position"
              } %>
        </div>
        
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Y Position</label>
          <%= form.number_field :y_position,
              value: element.y_position || 0,
              step: 0.1,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "y_position"
              } %>
        </div>
        
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Width</label>
          <%= form.number_field :width,
              value: element.width || 100,
              min: 10,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "width"
              } %>
        </div>
        
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Height</label>
          <%= form.number_field :height,
              value: element.height || 100,
              min: 10,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "height"
              } %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="pt-2 border-t border-gray-200 flex space-x-2">
      <button type="button" 
              class="flex-1 px-3 py-1 text-xs bg-red-600 text-white rounded hover:bg-red-700"
              data-action="click->pdf-editor#deleteSelectedElement">
        Delete
      </button>
      
      <button type="button" 
              class="flex-1 px-3 py-1 text-xs bg-gray-600 text-white rounded hover:bg-gray-700"
              data-action="click->pdf-editor#duplicateElement">
        Duplicate
      </button>
    </div>
  <% end %>
</div>
