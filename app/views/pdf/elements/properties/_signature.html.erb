<div class="space-y-4">
  <h4 class="text-sm font-semibold text-gray-900">Signature Properties</h4>
  
  <%= form_with model: [@pdf_document, element], local: false, html: { class: "space-y-3" } do |form| %>
    <!-- Signature Type -->
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">Signature Type</label>
      <%= form.select :signature_type,
          options_for_select([
            ['Text Signature', 'text'],
            ['Image Upload', 'image'],
            ['Digital Canvas', 'canvas']
          ], element.content['signature_type'] || 'text'),
          {},
          { 
            class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
            data: { 
              action: "change->pdf-editor#updateElementProperty",
              property: "content.signature_type"
            }
          } %>
    </div>

    <!-- Signature Text (if text type) -->
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">Signature Text</label>
      <%= form.text_field :signature_text,
          value: element.content['signature_text'] || 'John Doe',
          class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
          data: { 
            action: "input->pdf-editor#updateElementProperty",
            property: "content.signature_text"
          } %>
    </div>

    <!-- Font Size -->
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">Font Size</label>
      <%= form.number_field :font_size,
          value: element.styles['font_size'] || 18,
          min: 10, max: 48,
          class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
          data: { 
            action: "input->pdf-editor#updateElementProperty",
            property: "styles.font_size"
          } %>
    </div>

    <!-- Options -->
    <div class="space-y-2">
      <label class="flex items-center">
        <%= form.check_box :show_labels,
            checked: element.content['show_labels'] != false,
            class: "rounded border-gray-300 text-blue-600 mr-2",
            data: { 
              action: "change->pdf-editor#updateElementProperty",
              property: "content.show_labels"
            } %>
        <span class="text-xs font-medium text-gray-700">Show "Signature" label</span>
      </label>
      
      <label class="flex items-center">
        <%= form.check_box :show_date,
            checked: element.content['show_date'] == true,
            class: "rounded border-gray-300 text-blue-600 mr-2",
            data: { 
              action: "change->pdf-editor#updateElementProperty",
              property: "content.show_date"
            } %>
        <span class="text-xs font-medium text-gray-700">Show date field</span>
      </label>
    </div>

    <!-- Position and Size -->
    <div class="pt-2 border-t border-gray-200">
      <h5 class="text-xs font-medium text-gray-700 mb-2">Position & Size</h5>
      <div class="grid grid-cols-2 gap-2">
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">X Position</label>
          <%= form.number_field :x_position,
              value: element.x_position || 0,
              step: 0.1,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "x_position"
              } %>
        </div>
        
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Y Position</label>
          <%= form.number_field :y_position,
              value: element.y_position || 0,
              step: 0.1,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "y_position"
              } %>
        </div>
        
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Width</label>
          <%= form.number_field :width,
              value: element.width || 200,
              min: 50,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "width"
              } %>
        </div>
        
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Height</label>
          <%= form.number_field :height,
              value: element.height || 80,
              min: 30,
              class: "w-full px-2 py-1 border border-gray-300 rounded-md text-xs",
              data: { 
                action: "input->pdf-editor#updateElementProperty",
                property: "height"
              } %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="pt-2 border-t border-gray-200 flex space-x-2">
      <button type="button" 
              class="flex-1 px-3 py-1 text-xs bg-red-600 text-white rounded hover:bg-red-700"
              data-action="click->pdf-editor#deleteSelectedElement">
        Delete
      </button>
      
      <button type="button" 
              class="flex-1 px-3 py-1 text-xs bg-gray-600 text-white rounded hover:bg-gray-700"
              data-action="click->pdf-editor#duplicateElement">
        Duplicate
      </button>
    </div>
  <% end %>
</div>
