{
  "name": "pdf-editor",
  "version": "1.0.0",
  "description": "A modern PDF editor built with Rails 8 and HexaPDF",
  "main": "app/javascript/application.js",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --watch"
  },
  "keywords": ["pdf", "editor", "rails", "hexapdf"],
  "author": "Abdul Hamid Achik",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.0",
    "@hotwired/turbo-rails": "^8.0.0"
  }
}