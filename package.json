{
  "name": "pdf-editor",
  "version": "1.0.0",
  "description": "A modern PDF editor built with Rails 8 and HexaPDF",
  "main": "app/javascript/application.js",
  "scripts": {
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css",
    "build": "npm-run-all build:*",
    "watch:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets --watch",
    "watch:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --watch",
    "watch": "npm-run-all --parallel watch:*"
  },
  "keywords": [
    "pdf",
    "editor",
    "rails",
    "hexapdf"
  ],
  "author": "Abdul Hamid Achik",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "esbuild": "^0.19.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.0",
    "@hotwired/stimulus-webpack-helpers": "^3.0.1",
    "@hotwired/turbo-rails": "^8.0.0"
  }
}